    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch tmp.js",
            "program": "${workspaceFolder}/tmp.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Electron",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/@electron-forge/cli/dist/electron-forge-start",
            "env": { "DEBUG": "1", },
            "args": [
                "--vscode",
                // args to be passed directly to the Electron application
                // "--",
                // ""
            ],
        }
    ]
}
